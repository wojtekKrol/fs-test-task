{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "lib": ["ESNext"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": false,
    "baseUrl": "./src",
    "types": ["node", "jest"]
  },
  "ts-node": {
    "esm": true
  },
  "include": ["**/*.ts"]
}
